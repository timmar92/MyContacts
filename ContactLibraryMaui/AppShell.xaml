<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContactLibraryMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ContactLibraryMaui"
    
    xmlns:views="clr-namespace:ContactLibraryMaui.MVVM.Views"
    
    Shell.FlyoutBehavior="Disabled"
    Title="ContactLibraryMaui">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:ListPage}" Route="ListPage" />
    <ShellContent Title="Add" ContentTemplate="{DataTemplate views:AddPage}" Route="AddPage" />
    <ShellContent Title="Edit" ContentTemplate="{DataTemplate views:EditPage}" Route="EditPage" />
    <ShellContent Title="Delete" ContentTemplate="{DataTemplate views:DetailsPage}" Route="DetailsPage" />

</Shell>
